<%= form_for(@vehicle ||= Vehicle.new, :html => {:multipart => true}) do |f| %>
<!--
  <%# if @vehicle.errors.any? %>
    <%#*<div id="error_explanation">%>
      <%#*<h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>%>

      <%#*<ul>%>
        <%# @vehicle.errors.full_messages.each do |msg| %>
          <%#*<li><%= msg %></li>%>
        <%# end %>
      <%#*</ul>%>
    <%#*</div>%>
  <%# end %>
-->

  <div class="field">
    <div class="label">
      <%= f.label :type_of_vehicle %>
    </div>
    <div class="input-field">
      <%= f.select :type_of_vehicle, Vehicle::TYPES %>
    </div>
    <div class="clear"></div>
  </div>

  <div class="field">
    <div class="label">
      <%= f.label :manufacturrer %>
    </div>
    <div class="input-field">
      <%= f.text_field :manufacturrer %>
    </div>
    <div class="clear"></div>
  </div>

  <div class="field">
    <div class="label">
      <%= f.label :model %>
    </div>
    <div class="input-field">
      <%= f.text_field :model %>
    </div>
    <div class="clear"></div>
  </div>
  <div class="field">
    <div class="label">
      <%= f.label :year %>
    </div>
    <div class="input-field">
      <%= f.text_field :year %>
    </div>
    <div class="clear"></div>
  </div>
  <div class="field">
    <div class="label">
      <%= f.label :copy_of_title, 'Upload copy of title' %>
    </div>
    <div class="input-field">
      <%= f.file_field :copy_of_title, :class => 'file' %>
      (doc/docx/pdf)
    </div>
    <div class="clear"></div>
  </div>
  <div class="field">
    <div class="label">
      <%= f.label :location_of_original_title %>
    </div>
    <div class="input-field">
      <%= f.text_field :location_of_original_title %>
    </div>
    <div class="clear"></div>
  </div>
  <div class="field">
    <div class="label">
      <%= f.label :picture %>
    </div>
    <div class="input-field">
      <%= f.file_field :picture, :class => 'file' %>
      (jpg/jpeg/gif/png)
    </div>
    <div class="clear"></div>
  </div>
  <div class="field">
    <div class="label">
      <%= f.label :note %>
    </div>
    <div class="input-field">
      <%= f.text_area :note %>
    </div>
    <div class="clear"></div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

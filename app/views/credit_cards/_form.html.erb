  <%# end %>
  <%#*</ul>%>
  <%#*</div>%>
  <%# end %>
  -->

  <div class="field">
    <div class="label">
      <%= f.label :card_type %>
    </div>
    <div class="input-field">
      <%= f.select :card_type, CreditCard::TYPES %>
    </div>
    <div class="clear"></div>
  </div>
  <div class="field">
    <div class="label">
      <%= f.label :issuer %>
    </div>
    <div class="input-field">
      <%= f.text_field :issuer %>
    </div>
    <div class="clear"></div>
  </div>
  <div class="field">
    <div class="label">
      <%= f.label :phone %>
    </div>
    <div class="input-field">
      <%= f.text_field :phone %>
    </div>
    <div class="clear"></div>
  </div>
  <div class="field">
    <div class="label">
      <%= f.label :last_four_digits_of_card %>
    </div>
    <div class="input-field">
      <%= f.text_field :last_four_digits_of_card, :maxlength => 4, :onkeypress => 'validateDigit(event)' %>
    </div>
    <div class="clear"></div>
  </div>
  <div class="field">
    <div class="label">
      <%= f.label :note, 'Add Note' %>
    </div>
    <div class="input-field">
      <%= f.text_area :note %>
    </div>
    <div class="clear"></div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
